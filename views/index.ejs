<%- include('./partials/header') %> <% if (typeof error !== 'undefined' &&
error.length > 0) { %>
<div
  class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-500"
>
  <span class="inline-block text-white"> <%= error %> </span>
</div>
<% } %>

<div
  class="flex flex-col lg:flex-row w-full h-screen px-5 lg:px-20 bg-black text-white"
>
  <!-- Registration Form -->
  <div class="flex items-center justify-center w-full lg:w-1/2 h-screen">
    <div class="w-full max-w-md px-5 lg:px-32">
      <h3 class="text-4xl font-bold mb-3">
        Welcome to <span class="text-white">DigiShop</span>
      </h3>
      <h4 class="text-xl mb-5 text-gray-300">Create your account</h4>
      <form autocomplete="off" action="/users/register" method="post">
        <input
          class="bg-gray-800 text-white block w-full px-3 py-2 border border-gray-700 rounded-md mb-3 focus:outline-none focus:border-white"
          type="text"
          placeholder="Full Name"
          name="fullname"
        />
        <input
          class="bg-gray-800 text-white block w-full px-3 py-2 border border-gray-700 rounded-md mb-3 focus:outline-none focus:border-white"
          type="email"
          placeholder="Email"
          name="email"
        />
        <input
          class="bg-gray-800 text-white block w-full px-3 py-2 border border-gray-700 rounded-md mb-3 focus:outline-none focus:border-white"
          type="password"
          placeholder="Password"
          name="password"
        />
        <input
          class="px-5 py-3 mt-2 w-full rounded-full bg-white text-black font-semibold cursor-pointer transition-all hover:bg-gray-300"
          type="submit"
          value="Create My Account"
        />
      </form>
    </div>
  </div>

  <!-- Login Form -->
  <div class="flex items-center justify-center w-full lg:w-1/2 h-screen">
    <div class="w-full max-w-md px-5 lg:px-32">
      <h4 class="text-xl capitalize mb-5 text-gray-300">
        Login to your account
      </h4>
      <form autocomplete="off" action="/users/login" method="post">
        <input
          class="bg-gray-800 text-white block w-full px-3 py-2 border border-gray-700 rounded-md mb-3 focus:outline-none focus:border-white"
          type="email"
          placeholder="Email"
          name="email"
        />
        <input
          class="bg-gray-800 text-white block w-full px-3 py-2 border border-gray-700 rounded-md mb-3 focus:outline-none focus:border-white"
          type="password"
          placeholder="Password"
          name="password"
        />
        <input
          class="px-5 py-3 mt-2 w-full rounded-full bg-white text-black font-semibold cursor-pointer transition-all hover:bg-gray-300"
          type="submit"
          value="Login"
        />
      </form>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
