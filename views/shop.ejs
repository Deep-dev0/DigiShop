<%- include('./partials/header') %>

<% if (success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex items-start px-20 py-20 bg-black text-white">
    <div class="w-[25%] flex h-screen flex-col items-start">
        <div class="flex items-center gap-2 mb-4">
            <h3 class="text-gray-300">Sort by</h3>
            <form action="/shop">
                <select class="bg-gray-800 border border-gray-700 px-2 py-1 text-white" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="flex flex-col mt-10">
            <a class="block w-fit mb-2 text-gray-300 hover:text-white" href="">New Collection</a>
            <a class="block w-fit mb-2 text-gray-300 hover:text-white" href="">All Products</a>
            <a class="block w-fit mb-2 text-gray-300 hover:text-white" href="">Discounted Products</a>
        </div>
        <div class="mt-16">
            <a class="block w-fit mb-2 text-gray-300 hover:text-white" href="">Filter by :</a>
            <a class="block w-fit mb-2 text-gray-300 hover:text-white" href="">Availability</a>
            <a class="block w-fit mb-2 text-gray-300 hover:text-white" href="">Discount</a>
        </div>
    </div>
    <div class="w-[75%] flex flex-col gap-5">
        <div class="flex items-start gap-5">
            <% products.forEach(function(product) { %>
                <div class="w-60 bg-gray-800 rounded-md overflow-hidden">
                    <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                        <img class="h-48 object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    </div>
                    <div class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                        <div>
                            <h3><%= product.name %></h3>
                            <h4>â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white text-black" href="/addtocart/<%= product._id %>">
                            <i class="ri-add-line"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
